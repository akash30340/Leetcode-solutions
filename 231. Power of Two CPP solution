class Solution {
public:
    bool isPowerOfTwo(int n) 
    {
        int i;
        long long sum;
        if(n<=0)
        return false;
        for(i=0;i<=n/2;i++)
        {
            sum=pow(2,i);
             if(sum==n)
             return true;
             else
             {
                 if(sum>n)
                 return false;
             }
        }
        return false;
        
        
    }
};
